<?xml version="1.0" encoding="utf-8"?>
<io.euphoria.xkcd.app.impl.ui.InputBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <EditText
        android:id="@+id/nick_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect"
        android:inputType="text"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:hint="@string/nickname" />

    <EditText
        android:id="@+id/message_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/nick_entry"
        android:layout_toEndOf="@+id/nick_entry"
        android:layout_alignParentTop="true"
        android:hint="@string/message" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/base_green"
        android:layout_below="@+id/message_entry" />

</io.euphoria.xkcd.app.impl.ui.InputBar>